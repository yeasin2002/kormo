		"@orpc/openapi": "^1.9.2",
		"@orpc/server": "^1.9.2",
		"@orpc/zod": "^1.9.2",
		"@polar-sh/better-auth": "^1.1.7",
		"@polar-sh/sdk": "^0.34.17",
		"@scalar/express-api-reference": "^0.8.19",
		"@types/morgan": "^1.9.10",
		"ai": "^5.0.59",
		"better-auth": "^1.3.24",
		"chalk": "^5.6.2",
