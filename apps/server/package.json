	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"dev:tsx": "tsx watch src/index.ts",
		"dev:tsdown": "tsdown --watch",
		"start": "node dist/index.js",
