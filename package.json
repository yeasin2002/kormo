{
	"name": "my-better-t-app",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "oxlint",
		"prepare": "husky",
		"ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"build:web": "turbo build -F web",
		"build:server": "turbo build -F server",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"format": "pnpm exec biome check --write",
		"db:push": "turbo -F server db:push",
		"db:studio": "turbo -F server db:studio",
		"db:generate": "turbo -F server db:generate",
		"db:migrate": "turbo -F server db:migrate"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"oxlint": "^1.12.0",
		"turbo": "^2.5.4"
	},
	"lint-staged": {
		"**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint"
	},
	"packageManager": "pnpm@10.18.0"
}
